---
// Hero.astro
const { title, text, text2, imageSrc, showContent = true } = Astro.props;
---

<section class="hero">
  <div class="hero-image-container">
    <img src={imageSrc} alt="Doctor entertaining children" class="hero-image" />
    <div class="overlay"></div>
    <!-- Overlay for better text readability -->
  </div>

  {
    showContent && (
      <div class="hero-content">
        <h2>{title}</h2>
        <p>{text}</p>
        <p>{text2}</p>
      </div>
    )
  }
</section>

<style>
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 90vh;
    color: var(--primary-color);
    background-color: var(--primary-bg);
  }

  .hero-image-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: relative;
    z-index: 1;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3); /* Dark overlay */
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    text-align: center;
    color: var(--primary-color);
  }

  .hero-content h2 {
    font-size: 2.5rem;
    font-family: "Fredoka One", sans-serif;
    color: var(--accent-color);
    margin-bottom: 1rem;
  }

  .hero-content p {
    font-family: "Nunito", sans-serif;
    font-size: 1.2rem;
    line-height: 1.6;
  }
</style>
