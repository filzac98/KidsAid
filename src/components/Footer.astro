      </ul>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <a href="#header"
      ><img
        src="/images/KidsAid_Logo_Negative.png"
        alt="KidsAid Logo"
        class="footer-logo"
      />
      <div class="social-links"></div></a
    >

    <a
      href="https://www.instagram.com/kidsAid"
      target="_blank"
      class="social-link"
    >
      <i class="fab fa-instagram"></i>
    </a>
    <a
      href="https://www.facebook.com/kidsAid"
      target="_blank"
      class="social-link"
    >
      <i class="fab fa-facebook-square"></i>
    </a>
