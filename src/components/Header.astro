---
// Header.astro
const { currentPage } = Astro.props;
---

<header class="main-header">
  <div class="støtlogo">
    <a href="/">
      <img src="/images/støtlogo.png" alt="Support Us" class="støtlogo-img" />
    </a>
  </div>

  <div class="logo">
    <a href="/">
      <img
        src="/images/KidsAid_Logo_Negative.png"
        alt="KidsAid Logo"
        class="logo-img"
      />
    </a>
  </div>

  <nav class="main-nav">
    <!-- Burger Menu -->
    <button class="burger-menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <ul class="nav-links">
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="#about">About</a>
      </li>
      <li>
        <a href="#values">Values</a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .main-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    background-color: #b28dff;
  }

  .støtlogo {
    flex: 1;
  }

  .støtlogo-img {
    width: 100px; /* Adjust size as needed */
  }

  .logo {
    flex: 1;
    text-align: center; /* Centers the KidsAid logo */
  }

  .logo-img {
    width: 180px; /* Adjust size as needed */
  }

  .main-nav {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    position: relative;
  }

  /* Burger Menu Styling */
  .burger-menu {
    font-size: 1.5rem;
    background: none;
    border: none;
    color: #ffffff;
    cursor: pointer;
    position: relative;
    z-index: 1000; /* Ensure the burger icon is on top */
  }

  /* Animated Burger Icon (Lines) */
  .burger-menu span {
    display: block;
    width: 25px;
    height: 3px;
    background-color: #333333;
    margin: 5px auto;
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
  }

  /* When the burger menu is open, animate the lines */
  .burger-menu.open span:nth-child(1) {
    transform: rotate(45deg) translate(4px, 7px); /* Rotate top line to form X */
  }

  .burger-menu.open span:nth-child(2) {
    opacity: 0; /* Hide the middle line */
  }

  .burger-menu.open span:nth-child(3) {
    transform: rotate(-45deg) translate(4px, -7px); /* Rotate bottom line to form X */
  }

  /* Navigation Links (Dropdown) */
  .nav-links {
    display: none;
    flex-direction: column;
    background-color: #b28dff;
    position: absolute;
    top: 100%; /* Position below the header */
    right: 0;
    width: 300px;
    height: 300px;
    padding: 1rem;
    border-radius: 8px;
    box-shadow: 10px 6px 12px rgba(0, 0, 0, 0.289); /* Soft shadow */
    z-index: 999; /* Ensure it appears on top of other elements */
    opacity: 0; /* Start as invisible */
    visibility: hidden; /* Prevent clicks while hidden */
    transform: translateY(-20px); /* Start off slightly above */
    transition:
      opacity 0.3s ease,
      visibility 0.3s ease,
      transform 0.3s ease;
  }

  /* When active, the dropdown slides down and becomes visible */
  .nav-links.active {
    display: flex;
    opacity: 1;
    visibility: visible; /* Make it visible */
    transform: translateY(0); /* Slide down effect */
  }

  /* Each Link Style */
  .nav-links li {
    list-style-type: none;
    margin: 10px 0;
  }

  .nav-links a {
    color: #333333;
    text-decoration: none;
    font-family: "Poppins", sans-serif;
    font-size: 1.5rem;
    transition:
      color 0.3s ease,
      font-weight 0.3s ease;
  }

  .nav-links a:hover {
    color: #ff5454;
    /*  */
  }

  /* Active Link Styling */
  .nav-links a.active {
    font-weight: bold;
    color: #ff6b6b; /* Active link color */
  }
</style>

<script src="/js/burger.js" defer></script>
