---
// index.astro
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
import "../styles/global.css";
---

<MainLayout title="KidsAid - Bringing Smiles to Kids" currentPage="home">
  <Hero
    title="Welcome to KidsAid"
    text="Helping sick and vulnerable children and their families."
    text2="Creating joyful experiences in and out of hospitals."
    imageSrc="/images/hero.webp"
    showContent={true}
  />
  <section class="card-section">
    <h2 class="section-title">Section Title</h2>
    <div class="card-grid">
      <Card imageSrc="/path/to/image1.jpg" title="Card 1" />
      <Card imageSrc="/path/to/image2.jpg" title="Card 2" />
      <Card imageSrc="/path/to/image3.jpg" title="Card 3" />
      <!-- Add more cards as needed -->
    </div>
  </section>
</MainLayout>
